{
  "name": "react-go-iceworm-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "iw": "start \"Iceworm\" \"./Inspera Browser/iceworm.exe\" \"./iiw_config.json\"",
    "dev:iw": "start /B cmd /C \"npm run dev\" && timeout /T 5 /NOBREAK && start \"Iceworm\" \"./Inspera Browser/iceworm.exe\" \"./iiw_config.json\"",
    "kill:win-ports": "powershell -Command \"Get-NetTCPConnection | Where-Object {($_.LocalPort -ge 5173 -and $_.LocalPort -le 5180) -or $_.LocalPort -eq 9000} | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force -ErrorAction SilentlyContinue }\"",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "turbo": "^1.11.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
